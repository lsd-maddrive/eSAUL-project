<?xml version="1.0" ?>
<robot name="eSAUl" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:include filename="$(find eSAUl_ad_helll)/urdf/wheel.xacro" />
  <link name="link_chassis">

    <inertial>
      	<mass value="5"/>
      	<origin rpy="0 0 0" xyz="0 0 0"/>
      	<inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>

    <!-- body -->
    <collision name="collision_chassis">
      <geometry>
        <box size="0.45 0.22 0.13"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.45 0.22 0.13"/>
      </geometry>
      <material name="blue"/>
    </visual>

    
  </link>

	<xacro:link_wheel name="link_right_wheel_1" />
	<xacro:joint_wheel name="joint_right_wheel_1" child="link_right_wheel_1" origin_xyz="0.13 0.13 -0.05" />
  
	<xacro:link_wheel name="link_left_wheel_1" />
	<xacro:joint_wheel name="joint_left_wheel_1" child="link_left_wheel_1" origin_xyz="0.13 -0.13 -0.05" />

	<xacro:link_wheel name="link_right_wheel_2" />
	<xacro:joint_wheel name="joint_right_wheel_2" child="link_right_wheel_2" origin_xyz="-0.17 0.13 -0.05" />
  
	<xacro:link_wheel name="link_left_wheel_2" />
	<xacro:joint_wheel name="joint_left_wheel_2" child="link_left_wheel_2" origin_xyz="-0.17 -0.13 -0.05" />
	
	<xacro:link_wheel name="link_right_wheel_3" />
	<xacro:joint_wheel name="joint_right_wheel_3" child="link_right_wheel_3" origin_xyz="0.03 0.13 -0.05" />
  
	<xacro:link_wheel name="link_left_wheel_3" />
	<xacro:joint_wheel name="joint_left_wheel_3" child="link_left_wheel_3" origin_xyz="0.03 -0.13 -0.05" />

	<xacro:link_wheel name="link_right_wheel_4" />
	<xacro:joint_wheel name="joint_right_wheel_4" child="link_right_wheel_4" origin_xyz="-0.07 0.13 -0.05" />
  
	<xacro:link_wheel name="link_left_wheel_4" />
	<xacro:joint_wheel name="joint_left_wheel_4" child="link_left_wheel_4" origin_xyz="-0.07 -0.13 -0.05" />

