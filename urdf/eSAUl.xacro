    <!-- Simulated vehicle interface -->
    <plugin name="ModelPlugin" filename="librobot_gazebo.so" >
      <robotName>eSAUl</robotName>
      <wheelbase>link_chassis</wheelbase>
      <joint_right_1>joint_right_wheel_1</joint_right_1>
      <joint_left_1>joint_left_wheel_1</joint_left_1>
      <joint_right_2>joint_right_wheel_2</joint_right_2>
      <joint_left_2>joint_left_wheel_2</joint_left_2>
      <joint_right_3>joint_right_wheel_3</joint_right_3>
      <joint_left_3>joint_left_wheel_3</joint_left_3>	
      <joint_right_4>joint_right_wheel_4</joint_right_4>
      <joint_left_4>joint_left_wheel_4</joint_left_4>	
    </plugin>
</gazebo>

</robot>

